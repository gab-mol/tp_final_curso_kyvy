<ScreenAdm>
    Screen:
        name: "Logging"
        MDLabel:
            pos_hint:{"center_x":.5, "center_y":.8}
            text:"Ingrese su nombre"
            halign:"center"
        MDTextField:
            pos_hint:{"center_x":.5, "center_y":.7}
            halign:"center"
        MDRaisedButton:
            text:"Empezar a escribir"
            pos_hint:{"center_x":.5, "center_y":.2}
            on_release:root.current="Notas"

    Screen:
        name: "Notas"
        MDLabel:
            text:"Notas"
            halign:"center"
        MDBoxLayout:
            id: box
            adaptive_size: True
            spacing: "56dp"
            pos_hint: {"center_x": .5, "center_y": .5}
        MDRaisedButton:
            text:"Ir a home"
            pos_hint:{"center_x":.5, "center_y":.3}
            on_release:root.current="Logging"

<Note>
    padding: 4
    size_hint: None, None
    size: "200dp", "100dp"

    MDRelativeLayout:

        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
