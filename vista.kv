<ScreenAdm>
    name_str: name_field.text
    titl_note: titl_field.text
    text_note: tex_field.text
    Log:
        name: "Logging"
        MDBoxLayout:
            orientation: 'vertical'
            spacing:20
            padding:50
            MDLabel:
                font_size:50
                text:"[b]Ingrese su nombre[/b]"
                markup:True
                halign:"center"
                size_hint: 1, .25
            MDTextField:
                id: name_field
                mode:"rectangle"
                size_hint:.5, .20
                pos_hint:{'center_x':.5,'center_y':.5}
                font_size:25
                halign:"center"
            MDRaisedButton:
                text: "Escribir nueva nota"
                font_size: 25
                pos_hint:{"center_x":.5, "center_y":.5}
                size_hint:.5, .275
                on_release: 
                    root.current= "write"
            MDRaisedButton:
                text:"Ver notas guardadas"
                font_size: 25
                size_hint:.5, .275
                pos_hint:{"center_x":.5, "center_y":.5}
                on_release:root.current="Notas"

    NoteList:
        name: "Notas"
        MDBoxLayout:
            orientation: 'horizontal'
            MDBoxLayout:
                orientation: "vertical"
                size_hint: .8, 1
                MDTopAppBar:
                    elevation: 4
                    title: "Notas:"

                MDScrollView:
                    scroll_timeout : 100

                    MDList:
                        id: md_list
                        padding: 5

            MDBoxLayout:
                orientation: "vertical"
                size_hint: .2, 1
                padding: 30
                spacing: 15
                MDRaisedButton:
                    text:"Inicio"
                    font_size: 30
                    size_hint: 1,1
                    #pos_hint:{"center_x":.5, "center_y":1}
                    on_release:root.current="Logging"
                MDRaisedButton:
                    text:"Nueva"
                    font_size: 30
                    size_hint: 1,1
                    #pos_hint:{"center_x":.5, "center_y":1}
                    on_release:root.current="write"

    WritNote:
        name: "write"
        MDBoxLayout:
            padding: 40
            spacing: 15
            orientation: 'horizontal'
            MDBoxLayout:
                orientation: 'vertical'
                MDTextField:
                    id: titl_field
                    size_hint: 1, .25
                    font_size: 30
                    multiline: False
                    hint_text: "TÃ­tulo..."
                MDTextField:
                    id: tex_field
                    size_hint: 1, .75
                    font_size: 20
                    multiline: True
                    hint_text: "Escriba su nota...."
            MDBoxLayout:
                spacing: 30
                orientation: 'vertical'
                MDRaisedButton:
                    # id: save_button
                    text: "[b]Guardar[/b]"
                    markup: True
                    font_size: 30
                    size_hint: 1, 0.5
                    on_release:
                        root.save_note()
                        app.remove_items()
                        app.on_start()                        
                MDRaisedButton:
                    text: "Notas Guardadas"
                    font_size: 30
                    size_hint: 1, 0.5
                    on_release:root.current= "Notas"
                MDRaisedButton:
                    text: "Inicio"
                    font_size: 30
                    size_hint: 1, 0.5
                    on_release:root.current= "Logging"

<Note>
    padding: 4
    size_hint: None, None
    size: "750dp", "100dp"

    MDRelativeLayout:
        MDIconButton:
            id:del_button
            icon: "trash-can"
            pos_hint: {"top": 1, "right": .9}
            on_release: 
                root._del()
                app.remove_items()
                app.on_start()

        MDIconButton:
            id:upd_button
            icon: "pencil"
            pos_hint: {"top": 1, "right": 1}
            on_release: root._upd()

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
