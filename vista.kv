<ScreenAdm>
    name_str: name_field.text
    Log:
        name: "Logging"
        MDLabel:
            pos_hint:{"center_x":.5, "center_y":.8}
            text:"Ingrese su nombre"
            halign:"center"
        MDTextField:
            id: name_field
            pos_hint:{"center_x":.5, "center_y":.7}
            halign:"center"
        MDRaisedButton:
            text: "imprimir"
            pos_hint:{"center_x":.3, "center_y":.15}
            on_release: 
                root.ver_nomb()
                app.pr()
        MDRaisedButton:
            text:"Empezar a escribir"
            pos_hint:{"center_x":.5, "center_y":.2}
            on_release:root.current="Notas"

    NoteList:
        name: "Notas"
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                elevation: 4
                title: "Notas:"

            MDScrollView:
                scroll_timeout : 100

                MDList:
                    id: md_list
                    padding: 0
                    
        MDRaisedButton:
            text:"Cambiar de Nombre"
            pos_hint:{"center_x":.9, "center_y":.8}
            on_release:root.current="Logging"
        MDRaisedButton:
            text:"Escribir nota."
            pos_hint:{"center_x":.9, "center_y":.7}
            on_release:root.current="Logging"
    Screen:
        name: "Escribir nueva nota"
        MDBoxLayout:

            MDTextField:
                multiline: True
                hint_text: "Multi-line text"

<Note>
    padding: 4
    size_hint: None, None
    size: "750dp", "100dp"

    MDRelativeLayout:

        MDIconButton:
            id:dot_button
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}
            on_release: root.menu.open()

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True

<SwipeToDeleteItem>
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: app.remove_item(root)

    MDCardSwipeFrontBox:

        # Content of card.
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
