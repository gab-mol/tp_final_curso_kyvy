<ScreenAdm>
    name_str: name_field.text
    titl_note: titl_field.text
    text_note: tex_field.text
    upd_title: upd_titl_field.text
    upd_note: upd_tex_field.text

    Log:
        name: "Logging"
        MDBoxLayout:
            orientation: 'vertical'
            spacing:20
            padding:50
            MDLabel:
                font_size:50
                text:"[b]Ingrese su nombre[/b]"
                markup:True
                halign:"center"
                size_hint: 1, .25
            MDTextField:
                id: name_field
                mode:"rectangle"
                size_hint:.5, .20
                pos_hint:{'center_x':.5,'center_y':.5}
                font_size:25
                halign:"center"
            MDRaisedButton:
                text: "Escribir nueva nota"
                font_size: 25
                pos_hint:{"center_x":.5, "center_y":.5}
                size_hint:.5, .275
                on_release: 
                    root.current= "write"
            MDRaisedButton:
                text:"Ver notas guardadas"
                font_size: 25
                size_hint:.5, .275
                pos_hint:{"center_x":.5, "center_y":.5}
                on_release:root.current="Notas"

    NoteList:
        name: "Notas"
        MDBoxLayout:
            orientation: 'horizontal'
            MDBoxLayout:
                orientation: "vertical"
                size_hint: .8, 1
                MDTopAppBar:
                    elevation: 4
                    title: "Notas:"

                MDScrollView:
                    scroll_timeout : 100

                    MDList:
                        id: md_list
                        padding: 5
                        spacing:25

            MDBoxLayout:
                orientation: "vertical"
                size_hint: .2, 1
                padding: 30
                spacing: 15
                MDRaisedButton:
                    text:"Inicio"
                    font_size: 30
                    size_hint: 1,1
                    line_color: "white"
                    on_release:root.current="Logging"
                MDRaisedButton:
                    text:"Nueva"
                    font_size: 30
                    size_hint: 1,1
                    line_color: "white"
                    on_release:root.current="write"

    WritNote:
        name: "write"
        MDBoxLayout:
            padding: 40
            spacing: 15
            orientation: 'horizontal'
            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .8, 1
                MDTextField:
                    id: titl_field
                    size_hint: 1, .25
                    font_size: 30
                    multiline: False
                    hint_text: "Título..."
                MDTextField:
                    id: tex_field
                    size_hint: 1, .75
                    font_size: 20
                    multiline: True
                    hint_text: "Escriba su nota...."
            MDBoxLayout:
                spacing: 30
                orientation: 'vertical'
                size_hint: .2, 1
                MagicRisedButton:
                    # id: save_button
                    text: "[b]Guardar[/b]"
                    markup: True
                    font_size: 35
                    line_color: "white"
                    size_hint: 1, 0.3
                    on_release:
                        self.grow()
                        root.save_note()
                        app.remove_items()
                        app.on_start()                        
                MDRaisedButton:
                    text: "Notas \nGuardadas"
                    font_size: 25
                    line_color: "white"
                    size_hint: 1, 0.3
                    on_release: root.current= "Notas"
                MDRaisedButton:
                    text: "Inicio"
                    font_size: 35
                    line_color: "white"
                    size_hint: 1, 0.3
                    on_release: root.current= "Logging"

    UpdNote:
        name: "upd_note"
        MDTopAppBar:
            title: "[size=30sp][b]Actualizar nota del: [/b][i]"+root.upd_id+"[/i][/size]"
            markup: True
            elevation: 3
            pos_hint: {'top': 1}
        MDIconButton:
            icon:"home"
            icon_size: "60dp"
            pos_hint: {'center_x': .908,'top': 1.02}
            on_release: app.root.current= "Logging"            
        MagicRisedButton:
            text: "[b]Guardar[/b]"
            font_size: 23
            pos_hint: {'right': .85,'top': .978}
            line_color: "white"
            on_release:
                self.grow()
                root.change_note()
                app.on_start()
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, .8
            padding: 5
            MDTextField:
                id: upd_titl_field
                size_hint: 1, .25
                font_size: 30
                multiline: False
                hint_text: "Título..."
                text: root.upd_title
            MDTextField:
                id: upd_tex_field
                size_hint: 1, .75
                font_size: 20
                multiline: True
                hint_text: "Re escriba su nota...."
                text: root.upd_note


<Note>

    padding: 4
    size_hint: None, None
    width: app.root.width
    height: cardlabel.height
    MDRelativeLayout:
        MDIconButton:
            # id:del_button
            icon: "trash-can"
            pos_hint: {"top": 1, "right": .765}
            on_release: 
                root._del()
                app.remove_items()
                app.on_start()

        MDIconButton:
            # id:upd_button
            icon: "pencil"
            pos_hint: {"top": 1, "right": .8}
            on_release:
                root._upd()
                app.root.upd_id = root.id
                app.root.load_old()
                app.root.current="upd_note"


        MDLabel:
            id: cardlabel
            text: root.text
            markup: True
            adaptive_size: True
            height: self.texture_size[1] + 15
            pos: "12dp", "12dp"
            #bold: True

<MagicRisedButton@MagicBehavior+MDRaisedButton>
